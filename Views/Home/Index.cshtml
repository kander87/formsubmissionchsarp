@{ 
    ViewData["Title"] = "Home Page";
}
@model Registration
@* <div class="text-center border col-md-6 offset-md-3"> *@

        <div class="text-center border col-md-6 offset-md-3">
            <div>
            <form asp-action="addUser" asp-controller="Home" class="p-2"  >  
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                </div>

                <div class="form-group row  p-2">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                </div>

                <div class="form-group row p-2">
                    <label asp-for="Date" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type ="date" asp-for= "Date" class="form-control"  rows="4" cols="50">
                        </div>
                        <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group row p-2">
                    <label asp-for="Password" class="col-sm-2 col-form-label" ></label>
                        <div class="col-sm-10">
                            <input asp-for="Password" class="form-control" placeholder="Password"type ="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                </div>

                <div class="form-group row p-2">
                    <label asp-for="FavoriteOddNumber" class="col-sm-2 col-form-label"> Favorite Odd Number:</label>
                        <div class="col-sm-10">
                            <input asp-for="FavoriteOddNumber" class="form-control" placeholder="Favorite Odd Number">
                            <span asp-validation-for="FavoriteOddNumber" class="text-danger"></span>
                        </div>
                </div>

                <div class="col text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div></div>